{
    "globals": {
        "debug": true,
        "$": true,
        "window": true,
        "jQuery": true
    },
    "rules": {
        "indent": [2, 4],
        "semi": [0, "always"],
        "comma-dangle": [2, "always-multiline"],
        "no-console": [1]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "extends": "eslint:recommended"
}
